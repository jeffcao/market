<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f6fa" >

    <com.tblin.market.ui.MyTextView
        android:id="@+id/bigname"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/head"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="软件名称"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/infos_logo"
            android:layout_marginLeft="70dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/infos_share"
                android:layout_width="wrap_content"
                android:layout_height="23sp"
                android:text="资费"
                android:textColor="#8d8d8f"
                android:textSize="15dp" />

            <com.tblin.market.ui.MyTextView
                android:id="@+id/infos_version"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="版本"
                android:textColor="#8d8d8f"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/infos_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:src="@drawable/defalut_logo" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_marginRight="46dp"
            android:orientation="vertical" >

            <com.tblin.market.ui.MyTextView
                android:id="@+id/infos_categoty"
                android:layout_width="90sp"
                android:layout_height="23dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="类型"
                android:textColor="#8d8d8f"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/infos_size"
                android:layout_width="wrap_content"
                android:layout_height="23dip"
                android:text="大小"
                android:textColor="#8d8d8f"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/relayout2"
        android:layout_below="@+id/relativeLayout1" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/infos_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginLeft="16dp"
                android:text="软件介绍"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/infos_del_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/infos_del"
                android:layout_marginLeft="10dp"
                android:text="内容十分精彩"
                android:textColor="#272729"
                android:textSize="15dp" />

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                
                android:layout_alignParentRight="true"
                android:layout_below="@id/infos_del_2"
                android:background="@drawable/download_bt"
                android:drawableBottom="@drawable/cursor"
                android:textOff="更多.."
                android:textOn="收缩"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/gall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/infos_del_2"
                android:layout_marginBottom="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/help_bigscroll"
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:background="#d8d8d8" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="8sp"
                        android:layout_height="fill_parent"
                        android:background="#d8d8d8" />

                    <com.tblin.market.ui.MyGallery
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/infos_gall"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#d8d8d8"
                        android:spacing="10dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/gall"
                android:background="#d8d8d8" />

            <ImageView
                android:id="@+id/infos_line"
                android:layout_width="210dp"
                android:layout_height="0.5dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:background="#d8dad9" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relayout2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#dbdae0" >

        <Button
            android:id="@+id/infos_button1"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="4dp"
            android:onClick="goList"
            android:text="返  回"
            android:textSize="18sp" />

        <Button
            android:id="@+id/infos_download"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            android:text="下  载"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>